<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.weidd.best.mapper.UserDao">

    <!--新增用户-->
    <insert id="save" parameterType="com.weidd.best.pojo.User">
        insert into user values(#{name},#{password})
    </insert>

    <!--根据ID查询用户-->
    <select id="queryUserById" parameterType="int" resultType="com.weidd.best.pojo.User">
        select * from user where id=#{id}
    </select>
    <!--根据名称查询用户-->
    <select id="queryUserByName" parameterType="string" resultType="com.weidd.best.pojo.User">
        select * from user where name=#{name}
    </select>

</mapper>