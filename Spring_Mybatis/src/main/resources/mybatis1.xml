<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--创建数据源对象-->
    <bean id="dataSource" class="com.alibaba.druid.pool.DruidDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="username" value="root"/>
        <property name="password" value="3.014/*-+"/>
        <property name="url" value="jdbc:mysql://localhost:3306/mysqlStudy"/>
    </bean>

    <!--Spring整合Mybatis 就是通过Spring接管Mybatis的SqlSessionFactory组件的创建-->
    <bean id="sessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <!--依赖于DataSource-->
        <property name="dataSource" ref="dataSource"></property>
        <!--mapper 资源文件注册-->
        <property name="mapperLocations">
            <array>
                <value>classpath:com/weidd/best/dao/UserDaoMapper.xml</value>
            </array>
        </property>
    </bean>

    <!--创建dao-->
    <bean id="userDao" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="sqlSessionFactory" ref="sessionFactory"/>
        <property name="mapperInterface" value="com.weidd.best.dao.UserDao"/>
    </bean>

</beans>